
<div class="filter-wrapper">
  <%= link_to(category.sub_categories.first, class: 'category-link no-underline')  do %>
    <label for="<%= "category-#{category.id}" %>" class="filter-name">- <%= category.name %></label>
  <% end %>
  <% if category.searched_for?(params[:sub_categories]) %>
    <span class="filter-group-arrow glyphicon glyphicon-play rotated" style="margin: 0px 10px"></span>
  <% end %>
  <div class="sub-filter-wrapper <%= 'display' if category.searched_for?(params[:sub_categories]) %>">
    <% category.sub_categories.each do |sub_cat| %>
        <%= link_to(sub_cat, class: 'sub-filter-checkbox' ) do %>
        <label class="checkbox-style checkbox">
          <input id="<%= "category-#{sub_cat.id}" %>"
                 type="checkbox"
                 class="checkitem-inline"
                 <%= params[:sub_categories].is_a?(Array) && params[:sub_categories].include?(sub_cat.id.to_s) ? "checked='checked'" : "" %>>
          <span class="checkbox-indicator"></span>
        </label>
        <label for="<%= "category-#{sub_cat.id}" %>" class="filter-name"><%= sub_cat.name %></label>
      <% end %>
    <% end %>
    </div>
</div>
