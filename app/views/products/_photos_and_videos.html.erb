<section class="product-photos-wrapper col-md-12">
  <div class="product-photos">
    <div class="product-photos-header">
      <%= t '.photos_and_videos' %>
    </div>

    <% if @media.any? %>
      <div class="main-container product-photo-videos">
        <div class="main-content-wrapper">
          <div class="center-flex thumbs-matrix-wrapper product-media" id="js-product-media">
            <% @media.each do |media_item| %>
              <% if media_item.is_a? Photo %>
                <%= render partial: 'photos/search_thumbnail', locals: { photo: media_item } %>
              <% elsif media_item.is_a? Video %>
                <%= render partial: 'videos/search_thumbnail', locals: { video: media_item } %>
              <% end %>
            <% end %>
          </div>

          <div class="load-more-button">
            <span class="glyphicon glyphicon-menu-down" id="js-load-more"></span>
            <span> </span>
            <span class="glyphicon glyphicon-menu-up" id="js-show-less"></span>
          </div>
        </div>
      </div>

    <% else %>
      <div class="no-media-block-wrapper">
        <div class="no-media-block">
          <div class="no-media-title"><%= t '.no_photos_or_videos_yet' %> <b><%= t '.be_the_first' %></b></div>
          <div>
            <% if user_signed_in? %>
                <button type='button' id='upload-menu' class='btn new-post hidden-xs'
                  data-target="#NewPost" data-toggle="modal">
                  <%= t '.new_post' %>
                </button>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>

<script>
       $('.upload-menu').click(function() {
        send_track_upload();
       });
</script>
