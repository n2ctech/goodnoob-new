<%= form_for current_user, url: user_path(current_user), method: :put do |f| %>
  <div class='form-group'>
    <div class='col-sm-12'>
      <%= f.text_field :name, class: 'form-control', placeholder: t('.enter_a_name') %>
    </div>
  </div>

  <div class='form-group'>
    <div class='col-sm-12'>
      <%= f.text_field :last_name, class: 'form-control', placeholder: t('.enter_a_last_name') %>
    </div>
  </div>

  <div class='form-group'>
    <div class='col-sm-12'>
      <%= f.text_area :bio, class: 'form-control', placeholder: t('.enter_your_bio'), maxlength: 100 %>
    </div>
  </div>

  <% address = current_user.address || current_user.build_address %>
  <%= f.fields_for address do |ff| %>
    <div class='form-group'>
      <div class='col-sm-12'>
        <%= ff.text_field :country, class: 'form-control', placeholder: t('.enter_your_country') %>
      </div>
    </div>

    <div class='form-group'>
      <div class='col-sm-12'>
        <%= ff.text_field :city, class: 'form-control', placeholder: t('.enter_your_city') %>
      </div>
    </div>

    <div class='form-group'>
      <div class='col-sm-12'>
        <%= ff.text_field :street, class: 'form-control', placeholder: t('.enter_your_street') %>
      </div>
    </div>

    <%= f.submit class: 'btn btn-primary', id:'submit-user', hidden: true %>
  <% end %>
<% end %>

<% content_for :action do %>
  <div class='col-sm-12'>
    <%= link_to t('.save'), '#', class:'btn btn-primary', data:{submit_button: true, submit_target: "#submit-user"} %>
  </div>
<% end %>
