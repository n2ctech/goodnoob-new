<% unless user_signed_in? %>

    <button type='button' class='close my-custom-close' data-dismiss='modal' aria-label='Close'>
      <%= image_tag 'cross.png' %>
    </button>
 <div class="authform row flex-form">

   <div class='register-image no-padding col-lg-6 col-md-6 col-sm-12 col-xs-12' >
     <%= image_tag 'register_image.png' %>
   </div>

   <div class='register-form no-padding col-lg-6 col-md-6 col-sm-12 col-xs-12'>
     <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f| %>
       <%= devise_error_messages! %>
       <div class="form-group">
         <%= f.text_field :name, :autofocus => true, class: 'form-control', placeholder: 'Name' %>
       </div>
       <div class="form-group">
         <%= f.text_field :surname, class: 'form-control', placeholder: 'Surname' %>
       </div>
       <div class="form-group">
         <%= f.email_field :email, class: 'form-control', placeholder: 'E-mail address' %>
       </div>
       <div class="form-group">
         <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
       </div>
       <div class="form-group">
         <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirm password' %>
       </div>
       <%= render "devise/shared/social_login" %>

       <div class="button-registration" align="center">
         <%= f.submit 'Register', :class => 'btn btn-commit', :id => 'btnRegister_signup' %>
         <a class="btn-login" data-dismiss='modal' data-target='#SignInModal' id='btnLogin'>I already have an account...</a>
       </div>
    </div>

     <% end %>
   </div>
 <% end %>
