<% Category.with_guides.includes(:sub_categories, sub_categories: [:guides]).in_groups(2, false) do |cats| %>
  <% cats.each do |cat| %>
    <div class="buying-list">
      <div class="item-background">
        <% cat.sub_categories.with_guides.each do |sub_cat| %>
          <span class="buying-list-item">
            <%= link_to sub_cat.name, sub_category_guide_path(sub_cat, sub_cat.guides.first) %>
          </span>
          <span class="item-separator">|</span>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>
