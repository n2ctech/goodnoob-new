<div class='modal fade asp-modal' id='js-review-form-modal' tabindex='-1' role='dialog' aria-hidden='true'>
  <div class='modal-dialog'>
    <div class='modal-content'>

      <div class="modal-header">

        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <%= image_tag 'close.png' %>
        </button>

        <h4 class="modal-title">Add a review</h4>

      </div>

      <div class="modal-body">
        <%= form_for @review, url: product_reviews_path(params[:product_id]) do |f| %>
          <div class='form-group'>
            <%= f.text_field :title, class: 'form-control', placeholder: t('.title'), required: true %>
          </div>
          <%= render partial: 'reviews/review_rating_form', locals: { form: f } %>
          <div class='form-group'>
            <%= f.text_area :review, class: 'form-control wysihtml5',
                                     placeholder: t('.post_review'),
                                     rows: 7,
                                     required: true %>
          </div>
          <div class='form-group text-center'>
            <%= f.submit 'Submit', id: 'submit-review', class: 'btn upload-button'%>
          </div>
        <% end %>
      </div>

      <div class='modal-footer'>
<!--         <button type='button' class='btn btn-default' data-dismiss='modal'>
          Close
        </button> -->
      </div>

    </div>
  </div>
</div>

<div id='spinner' class='hidden'>
  <div class='spinner'>
    <div class='bounce1'></div>
    <div class='bounce2'></div>
    <div class='bounce3'></div>
  </div>
</div>
